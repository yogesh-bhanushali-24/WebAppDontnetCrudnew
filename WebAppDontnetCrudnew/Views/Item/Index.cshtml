@model IEnumerable<WebAppDontnetCrudnew.Models.Item>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Borrowed Items List</h2>
        </div>
        <div class="col-6">
            <a asp-controller="Item" asp-action="Create" class="btn btn-primary">create new item</a> 
        </div>
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                <th>ID</th>
                <th>Borrow Name</th>
                <th>Lender</th>
                <th>Item Name</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                { 
                  <tr>
                      <td width="30%">@item.Id</td>
                      <td width="30%">@item.Borrower</td>
                      <td width="30%">@item.Lender</td>
                      <td width="30%">@item.ItemName</td>
                  </tr>
                }
            </tbody>

        </table>





     

    }


</div>